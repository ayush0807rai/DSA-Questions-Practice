import java.util.*;

public class ques_3 {
    public static void main(String[] args) {
        int[] arr = {3, 2, 4, 7};
        int target = 6;
        int n = arr.length;

        int[] result = findTwoSum(arr, n, target);
        if (result.length == 2) {
            System.out.println("Indices (" + result[0] + "," + result[1] + ")");
        } else {
            System.out.println("No pair found");
        }
    }

    public static int[] findTwoSum(int[] arr, int n, int target) {
        int[][] pairs = new int[n][2];
        for (int i = 0; i < n; i++) {
            pairs[i][0] = arr[i];
            pairs[i][1] = i + 1;
        }

        Arrays.sort(pairs, (a, b) -> Integer.compare(a[0], b[0]));

        int left = 0, right = n - 1;
        while (left < right) {
            long sum = (long) pairs[left][0] + pairs[right][0];
            if (sum == target) {
                return new int[]{pairs[left][1], pairs[right][1]};
            } else if (sum < target) {
                left++;
            } else {
                right--;
            }
        }

        return new int[]{};
    }
}
